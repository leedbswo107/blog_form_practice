<%- include('header.ejs') %>
<main class="mw">
    <h2>THE BLOG</h2>
    <h3><%= posts[0].userid %>님 포스트 리스트</h3>
    <ul class="personal">
      <% if(posts.length === 0) {%>
        <li>등록된 포스트가 없습니다.</li>
        <% } else {%>
          <% posts.map(post => { %>
            <li>
          <% if(post.postImgPath == null){ %>
            <img src="/noimage.png" alt="이미지 없음">
            <% } else { %>
              <a href="/detail/<%= post._id %>">
            <img src="<%= post.postImgPath %>" alt="<%= posts.title %>"></a>
            <% } %>
        </li>
      <% }).join('');%>
      <% }%>
      
    </ul>
</main>
<%- include('footer.ejs') %>